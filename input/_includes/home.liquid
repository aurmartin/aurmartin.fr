      <a href="{{ post.url }}">
        <h3>
          {{ post.data.title }}
        </h3>
        <div class="post-metadata">
          {{ post.date | date: "%b %d, %Y" }}
        </div>
        <p class="post-description">
          {{ post.data.description }}
        </p>
      </a>
    </li>
  {% endfor %}
